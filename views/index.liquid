{% render 'partials/head.liquid' %}

  <main class="main">

    <article class="visitekaartje">
      <img src="{{ person.avatar }}" alt="foto {{ person.name }}" width="800" height="800" class="visitekaartje-img">
      <h1>{{ person.name }}</h1>
          <div class="fdnd-student">
            <a href="{{ person.website }}" >{{ person.custom.fdndstudent }}</a>
          </div>
      <p class="tekst">{{ person.bio }}</p> 

      <div class="rij-blokjes rij-skills">
        {% comment %} | upcase is eenl Liquid filter {% endcomment %}
        <p class="blokjes javasript">{{ person.custom.skill1 | upcase }}</p>
        <p class="blokjes html">{{ person.custom.skill2 | upcase }}</p>
        <p class="blokjes css">{{ person.custom.skill3 | upcase }}</p>
      </div>

      <div class="rij-blokjes">
        <p class="blokjes creatief">{{ person.custom.eigenschap1 | upcase }}  </p>
        <p class="blokjes sociaal">{{ person.custom.eigenschap2 | upcase }}</p>
        <p class="blokjes behulpzaam">{{ person.custom.eigenschap3 | upcase }}</p>
      </div>
    </article>

  </main>

{% render 'partials/foot.liquid' %}
